<MudAppBar Elevation="0">
    <AuthorizeView>
        <Authorized>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="MenuOnClick" />
        </Authorized>
    </AuthorizeView>
    <MudText Typo="Typo.h5" Class="ml-3">@AppSettings.ApplicationName</MudText>
    <MudSpacer />
    <AuthorizeView>
        <NotAuthorized>
            <MudButton Variant="Variant.Text" StartIcon="@Icons.Material.Filled.Login" Href="/Accounts/Login">ورود</MudButton>
            <MudButton Variant="Variant.Text" StartIcon="@Icons.Material.Filled.AppRegistration" Href="/Accounts/Register">ثبت نام</MudButton>
        </NotAuthorized>
    </AuthorizeView>
</MudAppBar>

@code {
    [Parameter]
    public EventCallback MenuOnClick { get; set; }
}