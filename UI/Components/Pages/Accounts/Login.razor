@page "/Accounts/Login"

<MudStack AlignItems="AlignItems.Center">
    <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mt-6">
        <MudCard Outlined Class="pa-5">
            <MudText Typo="Typo.h3" Class="my-3">ورود</MudText>
            <MudText>سلام</MudText>
            <MudText>لطفا نام کاربری یا ایمیل خود را وارد نمایید</MudText>
            <MudForm Model="_AuthenticateDTO" @ref="_Form">
                <MudTextField T="string" Placeholder="نام کاربری یا ایمیل" Variant="Variant.Outlined" Class="my-2 mud-ltr" Required RequiredError="این فیلد ضروری میباشد" @bind-Value="_AuthenticateDTO.UsernameOrEmail"></MudTextField>
                <MudTextField T="string" InputType="InputType.Password" Placeholder="رمز عبور" Variant="Variant.Outlined" Class="my-2 mud-ltr" Required RequiredError="این فیلد ضروری میباشد" @bind-Value="_AuthenticateDTO.Password"></MudTextField>
                <MudButton Color="Color.Primary" OnClick="Authenticate" Variant="Variant.Filled" FullWidth>ورود</MudButton>
            </MudForm>
        </MudCard>
    </MudContainer>
</MudStack>