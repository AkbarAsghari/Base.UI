@page "/Accounts/Register"

<MudStack AlignItems="AlignItems.Center">
    <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="mt-6">
        <MudCard Outlined Class="pa-5">
            <MudText Typo="Typo.h3" Class="my-3">ثبت نام</MudText>
            <MudText>سلام</MudText>
            <MudText>لطفا ایمیل خود را وارد نمایید</MudText>
            <MudForm Model="_RegisterUserDTO" @ref="_Form">
                <MudTextField T="string" Placeholder="ایمیل" Variant="Variant.Outlined" Class="my-2 mud-ltr" Required RequiredError="این فیلد ضروری میباشد" @bind-Value="_RegisterUserDTO.Email"></MudTextField>
                <MudTextField T="string" InputType="InputType.Password" Placeholder="رمز عبور" Variant="Variant.Outlined" Class="my-2 mud-ltr" Required RequiredError="این فیلد ضروری میباشد" @bind-Value="_RegisterUserDTO.Password"></MudTextField>
                <MudTextField T="string" InputType="InputType.Password" Placeholder="تکرار رمز عبور" Variant="Variant.Outlined" Class="my-2 mud-ltr" Required RequiredError="این فیلد ضروری میباشد" @bind-Value="_RegisterUserDTO.ConfirmPassword"></MudTextField>
                <MudButton Color="Color.Primary" OnClick="RegisterUser" Variant="Variant.Filled" FullWidth>ثبت نام</MudButton>
            </MudForm>
        </MudCard>
    </MudContainer>
</MudStack>
